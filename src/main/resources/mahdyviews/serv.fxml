<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="500.0" prefWidth="950.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ed.sanarenovo.controllers.service.servicecontroller"
            stylesheets="@/AymenViews/style.css">

   <!-- Sidebar à gauche -->
   <left>
      <fx:include source="/AymenViews/AdminSidebar.fxml" />
   </left>

   <!-- Contenu principal -->
   <center>
      <AnchorPane styleClass="content-container">
         <children>
            <Label layoutX="55.0" layoutY="63.0" text="Nom service" styleClass="form-label" />
            <TextField fx:id="nom" layoutX="208.0" layoutY="59.0" styleClass="form-field"/>

            <Label layoutX="68.0" layoutY="126.0" text="Nom chef service" styleClass="form-label"/>
            <TextField fx:id="nomchef" layoutX="208.0" layoutY="122.0" styleClass="form-field"/>

            <Label layoutX="55.0" layoutY="186.0" text="Nombre de salles de service" styleClass="form-label"/>
            <TextField fx:id="nbr_salles" layoutX="208.0" layoutY="182.0" styleClass="form-field"/>

            <Label layoutX="68.0" layoutY="250.0" text="Capacité" styleClass="form-label"/>
            <TextField fx:id="cap" layoutX="208.0" layoutY="246.0" styleClass="form-field"/>

            <Label layoutX="68.0" layoutY="310.0" text="État" styleClass="form-label"/>
            <TextField fx:id="etat" layoutX="208.0" layoutY="315.0" styleClass="form-field"/>

            <Button fx:id="enregist" layoutX="85.0" layoutY="383.0" text="Enregistrer"
                    onAction="#addService" styleClass="primary-button"/>

            <Button fx:id="retour" layoutX="221.0" layoutY="383.0" text="Retour"
                    onAction="#retour" styleClass="secondary-button"/>

            <!-- Messages d'erreur -->
            <Label fx:id="message1" layoutX="63.0" layoutY="94.0" styleClass="error-message"/>
            <Label fx:id="message2" layoutX="62.0" layoutY="159.0" styleClass="error-message"/>
            <Label fx:id="message3" layoutX="50.0" layoutY="281.0" styleClass="error-message"/>
            <Label fx:id="messafe4" layoutX="62.0" layoutY="343.0" styleClass="error-message"/>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
