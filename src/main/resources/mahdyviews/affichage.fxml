<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainContainer" prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ed.sanarenovo.controllers.service.showctrl"
            stylesheets="@/AymenViews/style.css">

    <left>
        <fx:include source="/AymenViews/AdminSidebar.fxml"/>
    </left>

    <center>
        <VBox fx:id="rootContainer" spacing="15" styleClass="content-container">

            <fx:include source="/AymenViews/TopBar.fxml"/>

            <Label styleClass="section-title" text="Liste des services"/>

            <AnchorPane>
                <children>
                    <TableView fx:id="tabview" layoutX="13.0" layoutY="40.0" prefHeight="200.0" prefWidth="466.0">
                        <columns>
                            <TableColumn fx:id="colID" text="id"/>
                            <TableColumn fx:id="colNom" text="nom"/>
                            <TableColumn fx:id="colChef" text="chef service "/>
                            <TableColumn fx:id="colSalles" text="nbr salle"/>
                            <TableColumn fx:id="colCapacite" text="capacite"/>
                            <TableColumn fx:id="colEtat" text="etat"/>
                        </columns>
                    </TableView>
                    <Button fx:id="supp" layoutX="498.0" layoutY="140.0" mnemonicParsing="false"
                            onAction="#deleteService" text="supprimer"/>
                    <Button fx:id="updat" layoutX="506.0" layoutY="289.0" mnemonicParsing="false"
                            onAction="#updateService" text="update"/>
                    <TextField fx:id="nomField" layoutX="13.0" layoutY="289.0" prefHeight="25.0" prefWidth="47.0"/>
                    <TextField fx:id="chefField" layoutX="77.0" layoutY="289.0" prefHeight="25.0" prefWidth="139.0"/>
                    <TextField fx:id="capaciteField" layoutX="237.0" layoutY="289.0"/>
                    <TextField fx:id="etatField" layoutX="401.0" layoutY="289.0" prefHeight="25.0" prefWidth="78.0"/>
                    <Label fx:id="message1" layoutX="13.0" layoutY="332.0" prefHeight="17.0" prefWidth="100.0"/>
                    <Label fx:id="message2" layoutX="88.0" layoutY="332.0" prefHeight="17.0" prefWidth="100.0"/>
                    <Label fx:id="message3" layoutX="237.0" layoutY="341.0" prefHeight="17.0" prefWidth="100.0"/>
                    <Label fx:id="message4" layoutX="401.0" layoutY="341.0" prefHeight="17.0" prefWidth="100.0"/>
                    <Button fx:id="add3" layoutX="138.0" layoutY="346.0" mnemonicParsing="false"
                            onAction="#servicenav" prefHeight="25.0" prefWidth="89.0" text="add service "/>
                    <Button fx:id="addsall" layoutX="300.0" layoutY="346.0" mnemonicParsing="false"
                            onAction="#addsale" prefHeight="25.0" prefWidth="89.0" text="add salle"/>
                </children>
            </AnchorPane>
        </VBox>
    </center>
</BorderPane>
