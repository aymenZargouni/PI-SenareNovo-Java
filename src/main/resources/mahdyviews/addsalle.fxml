<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="1000.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ed.sanarenovo.controllers.service.addSalle"
            stylesheets="@/AymenViews/style.css">

   <!-- Sidebar à gauche -->
   <left>
      <fx:include source="/AymenViews/AdminSidebar.fxml" />
   </left>

   <!-- Contenu principal -->
   <center>
      <VBox spacing="20" alignment="CENTER" styleClass="content-container">

         <Label text="Ajouter une salle" styleClass="section-title" />

         <GridPane hgap="15" vgap="15">
            <Label text="ID Service" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ComboBox fx:id="id_serv" GridPane.rowIndex="0" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-border-color: #4CAF50;" />

            <Label text="Type" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <TextField fx:id="type" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-border-color: #4CAF50;" />

            <Label text="État" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="etatcombo" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #ffffff; -fx-border-color: #FF9800;" />
         </GridPane>

         <!-- Messages d'erreur -->
         <Label fx:id="message1" style="-fx-text-fill: #e74c3c;" />
         <Label fx:id="message2" style="-fx-text-fill: #e74c3c;" />

         <!-- Boutons -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="energ" text="Enregistrer" onAction="#addSalle" styleClass="add-button" />
            <Button fx:id="salo" text="Salles" onAction="#salshw" styleClass="primary-button" />
         </HBox>

      </VBox>
   </center>
</BorderPane>