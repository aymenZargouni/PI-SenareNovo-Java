<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ed.sanarenovo.controllers.takoua.OffresController" stylesheets="/takoua_views/style.css">
    <children>
        <fx:include source="/AymenViews/TopBar.fxml" />
        <TableView fx:id="tableOffres" layoutX="14.0" layoutY="14.0" prefHeight="300.0" prefWidth="572.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colTitre" prefWidth="150.0" text="Titre" />
                <TableColumn fx:id="colDescription" prefWidth="200.0" text="Description" />
                <TableColumn fx:id="colPublication" prefWidth="100.0" text="Publication" />
                <TableColumn fx:id="colExpiration" prefWidth="100.0" text="Expiration" />
            </columns>
        </TableView>

        <!-- Bouton Postuler avec action -->
        <Button fx:id="btnPostuler" layoutX="400.0" layoutY="330.0" mnemonicParsing="false" text="Postuler" onAction="#handlePostuler" />

        <!-- Bouton Retour avec action -->
        <Button fx:id="btnRetour" layoutX="500.0" layoutY="330.0" mnemonicParsing="false" text="Retour" onAction="#handleRetour" />
    </children>
</AnchorPane>
