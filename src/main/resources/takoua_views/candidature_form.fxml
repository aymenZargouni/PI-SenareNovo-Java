<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefWidth="800.0" prefHeight="600.0"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ed.sanarenovo.controllers.takoua.CandidatureController"
            stylesheets="/takoua_views/style.css"
            styleClass="main-view">

    <children>
        <!-- Conteneur central -->
        <VBox alignment="TOP_CENTER" spacing="30" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="20">
            <fx:include source="/AymenViews/TopBar.fxml" />

            <!-- Carte du formulaire -->
            <VBox alignment="TOP_LEFT" spacing="15.0" maxWidth="600.0" styleClass="form-pane">

                <Text text="Soumettre une Candidature" style="-fx-font-size: 24px; -fx-fill: #2c3e50; -fx-font-weight: bold;" />

                <!-- Nom -->
                <Label text="Nom :" styleClass="form-label" />
                <TextField fx:id="txtNom" styleClass="form-field" />

                <!-- Prénom -->
                <Label text="Prénom :" styleClass="form-label" />
                <TextField fx:id="txtPrenom" styleClass="form-field" />

                <!-- Email -->
                <Label text="Email :" styleClass="form-label" />
                <TextField fx:id="txtEmail" styleClass="form-field" />

                <!-- CV -->
                <Label text="CV :" styleClass="form-label" />
                <TextArea fx:id="txtCV" prefRowCount="3" styleClass="form-field" />

                <!-- Lettre de motivation -->
                <Label text="Lettre de motivation :" styleClass="form-label" />
                <TextArea fx:id="txtLettreMotivation" prefRowCount="3" styleClass="form-field" />

                <!-- Boutons -->
                <HBox spacing="15" alignment="CENTER_RIGHT">
                    <Button fx:id="btnCancel" text="Annuler" onAction="#handleCancel" styleClass="form-button cancel-button"/>
                    <Button fx:id="btnSubmit" text="Soumettre" onAction="#handleSubmit" styleClass="form-button"/>
                </HBox>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
