<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ed.sanarenovo.controllers.Blog.CommentReplyController"
            style="-fx-background-color: #f9f9f9;"
            prefWidth="600" prefHeight="400">

    <VBox fx:id="mainVBox" layoutX="20" layoutY="20" spacing="15" style="-fx-padding: 20;">
        <Label text="Répondre au commentaire" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Label fx:id="lblCommentAuthor" style="-fx-font-size: 14px; -fx-text-fill: #555;" />
        <Label fx:id="lblCommentContent" wrapText="true" style="-fx-background-color: #ececec; -fx-padding: 10;"/>
        <Label text="Votre réponse :" />
        <TextArea fx:id="txtReply" promptText="Écrivez votre réponse ici..." prefRowCount="5"/>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Envoyer" onAction="#sendReply" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            <Button text="Annuler" onAction="#closeWindow" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>
