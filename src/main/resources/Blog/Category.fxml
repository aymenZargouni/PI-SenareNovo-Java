<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ed.sanarenovo.controllers.Blog.CategoryController"
            prefHeight="400.0" prefWidth="600.0">

   <children>
      <TableView fx:id="tableCategory" layoutX="20" layoutY="20" prefWidth="500" prefHeight="200">
         <columns>
            <TableColumn fx:id="colId" text="ID" />
            <TableColumn fx:id="colName" text="Name" />
         </columns>
      </TableView>

      <TextField fx:id="txtName" layoutX="20" layoutY="240" promptText="Name"/>

      <Button text="Ajouter" layoutX="20" layoutY="360" onAction="#addCategory"/>
      <Button text="Modifier" layoutX="100" layoutY="360" onAction="#updateCategory"/>
      <Button text="Supprimer" layoutX="200" layoutY="360" onAction="#deleteCategory"/>
   </children>
</AnchorPane>
