<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ed.sanarenovo.controllers.Blog.BlogController" spacing="10" style="-fx-background-color: #f5f5f5;">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <ComboBox fx:id="categoryFilter" promptText="Filtrer par catégorie" prefWidth="200"/>
        <Button fx:id="btnAdd" text="Ajouter" onAction="#handleAdd"/>
        <Button fx:id="btnRefresh" text="Actualiser" onAction="#refreshBlogs"/>
    </HBox>

    <TableView fx:id="tableBlog" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colTitle" text="Titre" prefWidth="200"/>
            <TableColumn fx:id="colContent" text="Contenu" prefWidth="300"/>
            <TableColumn fx:id="colImage" text="Image" prefWidth="150"/>
            <TableColumn fx:id="colCategory" text="Catégorie" prefWidth="150"/>
        </columns>
    </TableView>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnPrevious" text="Précédent" onAction="#handlePrevious"/>
        <Label fx:id="lblPage" text="Page 1"/>
        <Button fx:id="btnNext" text="Suivant" onAction="#handleNext"/>
    </HBox>
</VBox> 